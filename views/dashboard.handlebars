{{!-- Extends the main layout --}}
<h1>Dashboard</h1>

<!-- views/dashboard.handlebars -->

<h1>Your Dashboard</h1>
<p>Welcome to your dashboard! Here you can manage your posts.</p>

<section>
    <button id="new-post-button">Create New Post</button>
</section>

<section id="post-form" style="display:none;">
  <form id="new-post-form">
    <input type="text" id="post-title" name="title" placeholder="Post Title" required>
    <textarea id="post-content" name="content" placeholder="Write your post here..." required></textarea>
    <button type="submit">Publish</button>
  </form>
  <p id="success-message" style="display: none; color: green;">Published!</p>
</section>



<section>
    <h2>Your Posts</h2>
    {{#each posts}}
        <div class="post">
            <h3><a href="/post/{{id}}">{{title}}</a></h3>
            <p>{{content}}</p>
            <button class="edit-post" data-id="{{id}}">Edit</button>
            <button class="delete-post" data-id="{{id}}">Delete</button>
        </div>
    {{/each}}
</section>

<script src="/js/dashboard.js"></script>
