{{!-- Extends the main layout --}}
<h1>{{title}}</h1>
<p>Posted by {{user.username}} on {{date_created}}</p>
<p>{{content}}</p>

<section id="comments-section">
    <h2>Comments</h2>
    {{#each comments}}
        <div class="comment">
            <p>{{content}}</p>
            <p>â€” {{user.username}} on {{date_created}}</p>
        </div>
    {{/each}}
</section>

{{#if logged_in}}
<section id="new-comment">
    <h3>Leave a Comment</h3>
    <form id="comment-form">
        <textarea name="content" placeholder="Your comment here..." required></textarea>
        <button type="submit">Post Comment</button>
    </form>
</section>
{{else}}
<p>You must be <a href="/login">logged in</a> to leave a comment.</p>
{{/if}}

<script src="/js/comment.js"></script>
