{{!-- Extends the main layout --}}
<h1>Dashboard</h1>

<section>
    <button id="new-post-btn">Create New Post</button>
</section>

<section id="post-form" style="display:none;">
    <form id="new-post-form">
        <input type="text" name="title" placeholder="Post Title" required>
        <textarea name="content" placeholder="Write your post here..." required></textarea>
        <button type="submit">Publish</button>
    </form>
</section>

<section>
    <h2>Your Posts</h2>
    {{#each posts}}
        <div class="post">
            <h3><a href="/post/{{id}}">{{title}}</a></h3>
            <p>{{content}}</p>
            <button class="edit-post" data-id="{{id}}">Edit</button>
            <button class="delete-post" data-id="{{id}}">Delete</button>
        </div>
    {{/each}}
</section>

<script src="/js/post.js"></script>
